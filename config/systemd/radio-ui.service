[Unit]
Description=MPD client that show the current state on the LCD
After=mpd.service radio-display.service radio-ambilight.service
Requires=mpd.service radio-display.service radio.ambilight.service
PartOf=radio-display.service radio.ambilight.service

[Service]
ExecStart=/usr/bin/eulenfunk ui
Restart=on-failure

[Install]
WantedBy=multi-user.target
